<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f9"
    android:elevation="100dp"
    tools:context=".ui.bottomNav.note.NoteFragment">

    <Button
        android:id="@+id/add_article_btn"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:background="@drawable/button_radius"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:radius="8dp"
        android:text="追加"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        tools:layout_constraintCircleRadius="5dp"
        tools:paddingTop="0dp" />

    <ImageView
        android:id="@+id/to_home_btn"
        android:layout_width="29dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/article_title_form"
        android:layout_width="355dp"
        android:layout_height="47dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Title"
        android:inputType="textShortMessage|textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />

    <EditText
        android:id="@+id/article_body_form"
        android:layout_width="355dp"
        android:layout_height="300dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="top"
        android:hint="Write Your Output"
        android:inputType="textMultiLine"
        android:lines="6"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_title_form"
        app:layout_constraintVertical_bias="0.158" />

</androidx.constraintlayout.widget.ConstraintLayout>
